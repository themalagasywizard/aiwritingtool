{
  "name": "kalligram-typescript",
  "version": "2.0.0",
  "description": "An AI-powered writing tool for storytellers - TypeScript/React version",
  "main": "index.html",
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build && npm run postbuild",
    "postbuild": "cp -r auth out/auth",
    "start": "next start",
    "lint": "next lint",
